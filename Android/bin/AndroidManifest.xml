<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xk.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.xk.animation.Tween_AnimationActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.xk.animation.ObjectAnimatorActivity"
            android:label="@string/title_activity_object_animator" >
        </activity>
        <activity
            android:name="com.xk.animation.Frame_Of_AnimationActivity"
            android:label="@string/title_activity_frame__of__animation" >
        </activity>
        <activity
            android:name="com.xk.activity_life.LifeActivity"
            android:label="@string/title_activity_layout_animation" >
        </activity>
        <activity
            android:name="com.xk.activity.StartActivityForResultActivity"
            android:label="@string/title_activity_layout_animation" >
        </activity>
        <activity
            android:name="com.xk.activity.ForResultActivity"
            android:label="@string/title_activity_layout_animation" >
        </activity>
        <activity
            android:name="com.xk.activity.StandardActivity"
            android:label="@string/title_activity_layout_animation"
            android:launchMode="standard" >
        </activity>
        <activity
            android:name="com.xk.activity.ShowIntentActivity"
            android:label="@string/title_activity_show_intent" >
        </activity>
        <activity
            android:name="com.xk.activity.AppointActivity"
            android:label="@string/title_activity_appoint" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="com.xk.activity.intent.action.AppointActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xk.service.ServiceActivity"
            android:label="@string/title_activity_appoint" >
        </activity>

        <service android:name="com.xk.service.Try_Service" >
            <intent-filter>
                <action android:name="com.xk.service.service" />
            </intent-filter>
        </service>

        <activity
            android:name="com.xk.boradcastreceiver.BoradcastReceiverActivity"
            android:label="@string/title_activity_appoint" >
        </activity>
        <activity
            android:name="com.xk.sharedpreferences.SharedPreferencesActivity"
            android:label="@string/title_activity_sharedprefences" >
        </activity>
        <activity
            android:name="com.xk.file.FilesActivity"
            android:label="@string/title_activity_files" >
        </activity>
        <activity
            android:name="com.xk.thread.AsnyscTaskActivity"
            android:label="@string/title_activity_ansynctask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.xk.android.MyProviderActivity"
            android:label="@string/title_activity_ansynctask" >
        </activity>
    </application>

</manifest>